extends layout 

block content
    form(method="POST" action='/sign-up' class='account-form')
        h3 START FOR FREE
        h2 Create New Account
        p Already have an account? #[a(href='login' class='account-link') Log In]
        .form-content
            .personal-info
                .form-field 
                    label(for="first-name" class='form-label') First name
                    input(type="text" name='first_name' id='first-name' class='form-input') 
                .form-field
                    label(for="last-name" class='form-label') Last Name
                    input(type="text" name='last_name' id='last-name' class='form-input') 
            .form-field 
                    label(for="username" class='form-label') Username
                    input(type="text" name='username' id='username' class='form-input') 
            .form-field 
                    label(for="password" class='form-label') Password
                    input(type="text" name='password' id='password' class='form-input') 
            .form-field
                    label(for="confirm-password" class='form-label') Confirm Password
                    input(type="text" name='passwordConfirm' id='confirm-password' class='form-input') 
            button(type='submit' class='submit-btn') Sign Up